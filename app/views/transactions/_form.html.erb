<section class="align-center form-transact" >
  <%= form_with(model: transaction, url: category_transactions_path(@category)) do |form| %>
    <div class="category-select">
      <%= form.label :category_id %>
      <%= form.collection_select :category_id, current_user.categories, :id, :name, prompt: true, class: 'bg-slate-50' %>
    </div>

    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :amount, style: "display: block" %>
      <%= form.number_field :amount %>
    </div>

    <button>
      <%= form.submit :save, class: "save-transact"%>
    </button>
  <% end %>
</section>
