<%= link_to category do %>

  <div id="<%= dom_id category %>", class="category-flex">
    <img src="<%=category.icon %>" alt='category icon', class="icon"/>
   
    <p>
      <%= category.name %>
    </p>

    <p>
      <strong>Sum:</strong>
      <%= category.transactions.sum(:amount) %>
    </p>
    
  </div>
<% end %>
