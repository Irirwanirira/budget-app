<section class="section-transaction" >
  <div>
   
      <div class="top-nav">
        <p>back</p>
        <h3>Transactions</h3>
        <p> <%= link_to "Log out", destroy_user_session_path, data: { "turbo-method":
        :delete } %></p>
      </div>

      <div class="below-nav">
        <p> Total Amount: $
        <%=@category.transactions.sum(:amount) %>
        </p>
        <%= button_to "Delete", @category, method: :delete, class: "delete" %>
      </div>
      
      <div class="name-amount">
        <img src="<%=@category.icon %>" alt='category icon', class="icon"/>

        <h2>
          <%= @category.name %>
        </h2>
        <p>
        <strong>$</strong>
        <%= @category.transactions.sum(:amount) %>
      </p>

      </div>
      <% if @transactions.exists? %>
        <div>
          <% @transactions.each do |transaction| %>
          <div> 
              <%= render transaction %>
            </div>
          <% end %>
        </div>
      <% else %>  
      <% end %>
  </div>
  <button class="flex-end">
   <%= link_to "Add Transaction", new_category_transaction_path(@category), class: "add-transaction" %>
  </button>
</section>