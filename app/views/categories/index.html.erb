<p style="color: green"><%= notice %></p>

<section>

  <% if @categories.exists? %>
    <div>
      <h1>Categories</h1>
      <% @categories.each do |category| %>
        <div>
          <%= render category %>
          <%= button_to "Delete", category_path(category), method: :delete %>
        </div>
      <% end %> 
    </div>

  <% else %> 
      <p> Picture</p>
  <% end %>

  <div>
    <%= link_to "Add Category", new_category_path %>
  </div>
</section>
